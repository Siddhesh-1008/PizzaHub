<!-- DYNAMIC CODE -->
<!-- CART PAGE -->
 <!-- py-16 IS USED FOR GIVING TOP BOOTOM SPACE TO order container  -->
<section class="cart py-16">
    <!-- ORDER COTIANER -->
    <!-- MAKE USE OF IF ELSE TO SHOW EMPTY CART IF SESSION CART IS EMPTY AND IF NOT SHOW ORDER CONTAINER -->
    <%if(session.cart){%>

        <div class="order container w-1/2 mx-auto">
        
            <!-- HEADING OF ORDER COTAINER -->
            <div class="flex items-center border-b border-gray-300 pb-4">
                <img src="/img/cart-black.png" alt="NO PHOTO">
                <h1 class="font-bold ml-4 text-2xl">Order Summary..</h1>
            </div>

            <!-- LIST OF ORDERS -->
            <div class="pizza-list">
                <!-- NUMBER OF ORDERS-->
                <%for(let pizza of Object.values(session.cart.items)){%>
                    <!-- <%=pizza%> -->
                <div class="flex items-center my-8">
                    <img class="w-24" src="/img/<%=pizza.item.image%>" alt="NO PHOTO" srcset="">
                    
                    <!-- ml-4 MARGIN LEFT-4 IMAGE SE LEFT SE PUSH KARO - -->
                    <!-- flex-1 IS BASICALLY USED FOR GROWING FLEX SIZE -->
                    <div class="flex-1 ml-4">
                        <h1><%=pizza.item.name%></h1>
                        <span><%=pizza.item.size%></span>
                    </div>
                    <span class="flex-1"><%=pizza.qty%></span>
                    <span class="font-bold text-lg">Rs.<%=pizza.item.price * pizza.qty %></span>

                </div>
                <%}%>
                

            </div>
            <hr>
            
                    <!-- text-right IS BASICALLY USED FOR BRINGING THE TEXT TO RIGHT OF DIVISION CONTAINER -->
                    <div class="text-right py-4">

                        <!-- TOTAL AMOUNT VALUE -->
                        <div>
                            <span class="text-lg font-bold">Total Amount</span>
                            <span class="amount text-2xl font-bold ml-2">Rs.<%= session.cart.totalPrice %></span>
                        </div>
                        
                        <!-- ADRESS AND TELEPHONE NUMBER FORM -->
                        <%if(user){%>
                        <div>
                            <form action="/orders" method="POST" class="mt-12">
                                <input 
                                name="phone"
                                class="border border-gray-400 p-2 w-1/2 mb-4"
                                placeholder="Phone Number"
                                type="text">

                                <input 
                                name="address"
                                class="border border-gray-400 p-2 w-1/2"
                                placeholder="Adress"
                                type="text">

                                <div>
                                    <button
                                    class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" 
                                    type="submit">Order Now</button>
                                </div>

                            </form>
                        </div>
                        <%}else{%>
                        <!-- REDIRECTING PAGE -->
                        <a href="/login" class="inline-block cursor-pointer px-6 btn-primary px-6 py-2 
                        rounded-full text-white font-bold mt-6">Login to continue...</a>
                        <%}%>
                    </div>

        </div>

    <%}else{%>

        <!-- EMPTY CART -->
        <!-- SEEN ONLY WHEN CART DOESNOT HAVE ANY ITEMS IN IT -->
        <div class="empty-cart">

            <!-- CART PAGE 
            mx-auto is used for bringing the division at center  -->
            <div class="container mx-auto text-center">
                <h1 class="text-3xl font-bold mb-2">Cart Empty..</h1>
                <p class="text-gray-500 text-lg mb-12">You probably haven't ordered a pizza yet <br>To order a pizza,go to main page</p>
                <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="No photo found" >
                <!-- href="/" "/" ARE THE ENDPOINTS DEFINE IN ROUTES -->
                <a href="/" 
                class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">
                Go BACK..
                </a>
            </div>
        
        </div>
        
    <%}%>

</section>